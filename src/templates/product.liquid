<div class="grid product-wrapper min-h100vh">
  <div class="js-product-wrapper">
    <div class="product-thumbnails left sticky t5 pr1 border-box show-lg">
      {% for image in product.images %}
        <button class="thumbnail w100p h100p overflow-hidden bg-white border border-smoke rounded mb1 hover-border-black pointer no-outline p0" data-id="{{ image.id }}">
          <div class="image bg-center bg-cover fade-image" style="padding-top: 100%;" data-img="{{ image | img_url: '300x' }}"></div>
        </button>
      {% endfor %}
    </div>
    <div class="product-images">
      <div class="product-image-gallery hide-md">
        <div class="js-product-image-gallery">
          {% for image in product.images %}
            <div class="h100p overflow-hidden bg-white border border-smoke rounded mb1">
              <div class="image bg-center bg-cover fade-image" style="padding-top: 100%;" data-img="{{ image | img_url: '1650x' }}"></div>
            </div>
          {% endfor %}
        </div>
        <div class="pager">
          {% for image in product.images %}
            <span class="pager-dot {% if forloop.first %} dot-active {% endif %}"></span>
          {% endfor %}
        </div>
      </div>
      <div class="show-md">
        {% for image in product.images %}
          <div class="h100p overflow-hidden bg-white border border-smoke rounded mb1">
            <div id="{{ image.id }}" class="image bg-center bg-cover fade-image" style="padding-top: 100%;" data-img="{{ image | img_url: '1650x' }}"></div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="product-details t5 pb1">
      <div class="product-details-wrapper">
        {% include 'product-details' %}
      </div>
    </div>
  </div>
</div>
{% section 'insta-famous' %}
