<div class="grid page pt3 pb8">
  <h3 class="m0 bold text-normal">{{ page.title }}</h3>
  <div class="page-content break-word text-left pt2">
    {{ page.content }}
  </div>
  <div class="pt3">
    <a class="inline-block dark-pink mr1 hover-opacity-5" href="https://www.instagram.com/ragenjewels/?hl=en" target="_blank">
      {% include 'instagram-icon' %}
    </a>
    <a class="inline-block dark-pink mr1 hover-opacity-5" href="https://www.facebook.com/ragenjewels/" target="_blank">
      {% include 'facebook-icon' %}
    </a>
    <a class="inline-block dark-pink mr1 hover-opacity-5" href="https://www.pinterest.com/ragenjewels/" target="_blank">
      {% include 'pinterest-icon' %}
    </a>
    <a class="inline-block dark-pink hover-opacity-5" href="https://twitter.com/ragenjewels" target="_blank">
      {% include 'twitter-icon' %}
    </a>
  </div>
</div>
