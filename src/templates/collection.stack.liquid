{% style %}
.variant-stack-options {
  padding-top: .5rem;
  max-width: 380px;
  margin: 0 auto;
}
.customizer__right--copy:not(:empty) {
  margin-bottom: .5rem;
}
.customizer__right--title {
  margin-bottom: .5rem;
}
.discount-icon {
  margin-right: .5rem;
}
.customizer__right--slots {
  max-width: 380px;
  margin: 0 auto;
}
.customizer__right--slot-img .customizer__right--remove {
  color: white;
  opacity: 0;
  background-color: rgba(0,0,0,.4);
  transition: opacity .3s;
}
.customizer__right--slot-img[style]:hover .customizer__right--remove {
  opacity: 1;
  cursor: pointer;
}
@media screen and (min-width: 768px) {
  .variant-stack-options {
    max-width: none;
    width: 100%;
    margin: 0;
  }
  .customizer__right--slots {
    margin-top: 1.5rem;
    max-width: none;
    width: 100%;
  }
}
{% endstyle %}

{% assign words = collection.handle | split: 'stack-' %}
{% for word in words %}
  {% assign category = word %}
{% endfor %}

<div class="pt1 px1 pb0 hide-md text-center">
  <h3 class="customizer__right--title text-normal mt0 bold hide-md">Build Your {{ category | capitalize }} Stack</h3>
  <p class="h6 mt0 mb1 hide-md">
    Get <span class="bold">40% off</span> any combination of 3 {{ category }}
  </p>
</div>
<div class="show-md">
  <div class="pink mb2 bg-light-pink p1 flex justify-center items-center">
    <svg class="discount-icon" width="24" viewBox="0 0 24 24">
      <g fill="none">
        <path d="M17.598 4.303l-3.395.534-2.42-2.419-2.436 2.463-3.388-.56-.531 3.336-3.075 1.585 1.55 3.037-1.559 3.064L5.397 16.9 5.94 20.3l3.377-.56 2.438 2.456 2.42-2.412 3.404.534.534-3.379 3.102-1.568-1.555-3.059 1.549-3.063-3.076-1.569-.534-3.376z" stroke="currentColor" stroke-width="2"/>
        <path d="m9.28 7.31a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0 -3zm5 7a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0 -3zm-6.09 3l8.59-8.59-1.41-1.41-8.59 8.59z" fill="currentColor"/>
      </g>
    </svg>
    <p class="m0 h5">Choose <span class="bold">3 items</span> for a stack that’s uniquely you, at a price you’ll love.</p>
  </div>
</div>
<div class="grid">
  <div class="customizer black">
    <div class="customizer__left">
      <div class="customizer__left--rings">
        <div class="flex flex-wrap">
          {% for product in collection.products %}
            {% include 'collection' %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="customizer__right">
      <div class="desktop-customizer sticky t5 pl4">
        {% include 'customizer-selections' %}
      </div>
    </div>
  </div>
</div>

{% section 'insta-famous' %}
