<div>
  <div class="text-center pt4 hide-lg">
    {% for secondary in linklists.secondary-menu.links %}
      <a href="#" data-id="{{ secondary.title | handleize }}" class="inline-block no-underline collection-filter pink bg-light-pink rounded text-center h5">
        {{ secondary.title }}
      </a>
    {% endfor %}
  </div>
  {% for secondary in linklists.secondary-menu.links %}
    {% for collection in collections %}
      {% if collection.title == secondary.title %}
        <div id="{{ secondary.title | handleize }}" class="grid py3">
          <div class="text-center">
            <h3 class="m0 bold text-normal">
              {{ collection.title }}
            </h3>
          </div>
          <div class="flex flex-wrap pt2">
            {% for product in collection.products limit: 8 %}
              {% include 'collection'%}
            {% endfor %}
          </div>
          <div class="text-center mt2">
            <a href="{{ collection.url }}" class="button no-underline bg-black white">
              See all
              {{ collection.title }}
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  {% endfor %}
</div>
{% section 'insta-famous' %}
