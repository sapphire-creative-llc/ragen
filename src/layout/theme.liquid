<!doctype html>
<html lang="{{ shop.locale }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="shortcut icon" href="https://bit.ly/2PxtuHi" />

    <title>{{ shop.name }} - {{ page_title }}</title>

    <meta name="description" content="{{ shop.description }}">

    {% include 'style-tags', layout: 'theme' %}

    {{ '//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' | script_tag }}

    {% include 'script-tags', layout: 'theme' %}

    {{ content_for_header }}

    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-KFPSZCV');</script>
    <!-- End Google Tag Manager -->
  </head>

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KFPSZCV"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <div class="site flex flex-column items-between min-h100vh {% if settings.display_announcement_banner %}banner-showing{% endif %}">
      {% include 'header' %}
      <div class="mx1 border-box site-wrapper main-height flex-1 {% if settings.display_announcement_banner %}banner-showing{% endif %}">
        {{ content_for_layout }}
      </div>
      {% include 'footer' %}
    </div>
    {% include 'cart' %}
    {% include 'mobile-nav' %}
    {% include 'newsletter-popup' %}

    {% comment %}<!-- QuadPay Learn More Modal -->{% endcomment %}
    <script async src="https://widgets.quadpay.com/ragenjewels/quadpay-widget-1.1.0.js" id="qp-script" type="application/javascript"></script>
  </body>
</html>
