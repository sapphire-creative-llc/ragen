@import url('./fonts.scss');

* {
  -webkit-tap-highlight-color: transparent;
}

$break-sm: 480px;
$break-md: 768px;
$break-lg: 1048px;
$break-xl: 1440px;

html, body {
  margin: 0;
  padding: 0!important;
  box-sizing: border-box;
  font-family: 'Apercu Regular';
  font-size: 1.125rem;
  line-height: 1.25;
  height: 100%;
}

body {
  &::before {
    content: 'sm';
    display: none;
    @media screen and (min-width: $break-md) {
      content: 'md';
    }
    @media screen and (min-width: $break-md) {
      content: 'lg';
    }
    @media screen and (min-width: $break-md) {
      content: 'xl';
    }
  }
}

p { line-height: 1.6; }

img { max-width: 100%; }

select { -webkit-appearance: menulist-button; }

#preview-bar-iframe {
  display: none;
}

.button {
  border: 0;
  font-size: 1rem;
  cursor: pointer;
  background-color: transparent;
  padding: .75rem 1rem;
  outline: none;
}

.list-reset {
  margin: 0;
  padding: 0;
