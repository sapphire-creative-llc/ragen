    position: absolute;
    bottom: -14px;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;

    .pager-dot {
      width: 7px;
      height: 7px;
      transition: background-color 0.3s ease;
      background-color: #ddd;
      border-radius: 50%;
