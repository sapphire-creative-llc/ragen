  opacity: 1;
  transition: all 0.2s;
  &.hidden {
    visibility: hidden;
    opacity: 0;
  }
  .popup-vert-center {
    @media screen and (min-width: $break-md) {
      display: flex;
      align-items: center;
      width: 100%;
      height: 100%;
    }
  }
  .popup-box {
    max-width: 48rem;
    flex-direction: column;
    @media screen and (min-width: $break-md) {
      margin-left: auto;
      margin-right: auto;
