.hover-placeholder-dark {
  -webkit-transition: all 0.2s;
  transition: all 0.2s;
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.1);
  &:hover {
    box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.3);
  }
}

.product-image {
  -webkit-transition: opacity 0.5s;
  transition: opacity 0.5s;
  opacity: 0;
  &.show {
    opacity: 1;
  }
}

.mobile-nav {
  transform: translateX(-100%);
  -webkit-transition: transform 0.2s;
  transition: transform 0.2s;
  &.open {
    transform: translateX(0%);
  }
}

.main-description {
  p {
    padding: 0;
  }
  @media screen and (min-width: $break-md) {
    max-width: 500px;
  }
}

.heading {
  font-size: 1.25rem;
  font-family: 'Questa Sans', 'HelveticaNeue-Light', 'Helvetica Neue Light',
    'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif;
  font-weight: normal;
  display: inline-block;
  border-bottom: 1px solid #d7dbdf;
  padding: 0 0.75rem;
  line-height: 1.6;
}

footer {
  a {
    margin-bottom: 0.25rem;
  }
}

.page {
  text-align: center;
  .page-content {
    text-align: left;
    max-width: 640px;
    margin: 0 auto;
    p,
    ul,
    h1,
    h2,
    h3,
    h4,
    h5 {
      margin: 0 auto 30px;
    }
    p {
      font-size: 1rem;
      color: #999;
    }
    img {
      margin: 0 0 2rem;
      width: 100%;
      border: 2px solid #eee;
      display: block;
    }
  }
}

.cart-image {
  width: 4rem;
  height: 4rem;
  @media screen and (min-width: $break-md) {
    width: 5.6rem;
    height: 5.6rem;
  }
}

.pad-index-numbers {
  padding: 1rem;
  @media screen and (min-width: $break-md) {
    padding: 2rem;
  }
}

.pad-announcement {
  background-color: #1c1c1c;
  transition: background-color 0.2s;
  &:hover {
    background-color: #333;
  }
  @media screen and (min-width: $break-md) {
    padding: 0 2rem;
  }
}

.product-images {
  width: 100%;
  @media screen and (min-width: $break-md) {
    width: 50%;
    float: left;
  }
  @media screen and (min-width: $break-lg) {
    width: 62%;
  }
}

.product-wrapper {
  padding-top: 1rem;
  @media screen and (min-width: $break-md) {
    padding-top: 2rem;
  }
}
.product-details {
  width: 100%;
  @media screen and (min-width: $break-md) {
    position: sticky;
    float: right;
    width: 50%;
  }
  @media screen and (min-width: $break-lg) {
    width: 30%;
  }

  .product-details-wrapper {
    @media screen and (min-width: $break-md) {
      margin: auto;
      width: 80%;
    }
  }

  .product-input {
    margin: 0.5rem 0.65rem 0.5rem 0;
    &:hover input:not([disabled]):not(:checked) + button {
      color: #666;
      border-color: #666;
    }
    .product-option {
      height: 2rem;
      padding: 0 0.75rem;
      span {
        top: 1px;
        display: block;
      }
      .square {
        height: 1.8rem;
        width: 1.4rem;
        &.gold {
          background-color: #f7e2b6;
        }
        &.silver {
          background-color: #d8d8d8;
        }
      }
    }
    .product-Size {
      width: 2rem;
    }
    .product-Color {
      top: 2px;
    }
  }
  ul {
    padding-left: 16px;
  }
}

.product-thumbnails {
  @media screen and (min-width: $break-lg) {
    width: 8%;
  }
}

.product-tab {
  border-color: #fff;
  padding: 0 0.5rem 0.25rem;
  &.active {
    color: #222;
    border-color: #222;
  }
}

.w25p {
  width: 25%;
}

.w75p {
  width: 75%;
}

.rounded-bottom {
  border-radius: 0 0 4px 4px;
}

.rounded-top {
  border-radius: 4px 4px 0 0;
}

.rounded-left {
  border-radius: 4px 0 0 4px;
}

.rounded {
  border-radius: 4px 4px 4px 4px;
}

.retina {
  zoom: 50%;
}

.tag {
  margin-top: 0.5rem;
  padding: 0.3rem 0.7rem;
}

.quote-width {
  @media screen and (min-width: $break-md) {
    width: 46rem;
  }
  p {
    font-size: 1rem;
    padding: 0 1rem;
    @media screen and (min-width: $break-md) {
      font-size: 1.5rem;
      padding: 0;
    }
  }
}

input[type='number'] {
  -webkit-appearance: textfield;
  -moz-appearance: textfield;
  appearance: textfield;
}

input[type='number']::-webkit-inner-spin-button,
input[type='number']::-webkit-outer-spin-button {
  -webkit-appearance: none;
}

.number-input {
  margin-top: 0.5rem;
  height: 1.4rem;
  input {
    width: 1.2rem;
    font-family: inherit;
    font-size: 0.675rem;
    border: none;
    background: none;
    height: 1.2rem;
    position: relative;
  }
  button {
    outline: none;
    -webkit-appearance: none;
    background-color: transparent;
    border: none;
    cursor: pointer;
    margin: 0;
    padding: 0 0.4rem;
  }
}

.collection-filter {
  padding: 0.25rem 0.5rem;
  margin: 0 0.5rem 1rem;
  outline: none;
}

.tagline {
  width: 90%;
  @media screen and (min-width: $break-md) {
    width: 75%;
  }
}

.insta-famous {
  padding: 3rem 0;

  @media screen and (min-width: $break-md) {
    padding: 5rem 0;
    margin: 0;
  }
  .negative-margin {
    margin: 0 -0.5rem;
  }
  .image-wrapper {
    width: 50%;
    padding: 0 0.5rem;
    float: left;
    box-sizing: border-box;
    @media screen and (min-width: $break-md) {
      width: 25%;
      padding: 0 0.5rem;
    }
  }
}

.hover-hide {
  transition: opacity 0.2s;
  opacity: 1;
  &:not([data-images-length='1']) {
    &:hover {
      opacity: 0;
    }
  }
}

.image-module {
  padding: 3rem 0 0;
  flex-direction: column;
  @media screen and (min-width: $break-md) {
    padding: 5rem 0 0;
    flex-direction: row;
  }
  .description {
    padding: 0 1rem;
    @media screen and (min-width: $break-md) {
      padding: 0;
      width: 50%;
    }
    button {
      display: block;
      margin-left: auto;
      margin-right: auto;
      @media screen and (min-width: $break-md) {
        display: inline-block;
      }
    }
    h2 {
      margin-bottom: 0.5rem;
    }
    img {
      margin-bottom: 0.5rem;
    }
  }
  .visual {
    @media screen and (min-width: $break-md) {
      width: 50%;
    }
  }
  .space {
    order: 2;
    @media screen and (min-width: $break-md) {
      padding-left: 6rem;
    }
  }
  &.left-module {
    .description {
      @media screen and (min-width: $break-md) {
        padding-left: 6rem;
      }
    }
    .visual {
      margin-bottom: 2rem;
      @media screen and (min-width: $break-md) {
        margin-bottom: 0;
      }
    }
  }
  &.right-module {
    .description {
      order: 3;
      @media screen and (min-width: $break-md) {
        order: 1;
        padding-right: 6rem;
      }
    }
    .visual {
      order: 1;
      margin-bottom: 2rem;
      @media screen and (min-width: $break-md) {
        order: 3;
        margin-bottom: 0;
      }
    }
  }
}

.sizing-text {
  font-size: 1rem;
  @media screen and (min-width: $break-md) {
    font-size: 1.5rem;
  }
}

.sizing-chart-padding {
  padding: 1rem;
  @media screen and (min-width: $break-md) {
    padding: 2rem;
  }
}

.ig-close-icon {
  right: -1rem;
  top: -1rem;
}

.pagination {
  a {
    color: #1c1c1c;
    text-decoration: none;
  }
  .page,
  .deco,
  .next {
    padding: 0 0.5rem;
  }
  .current {
    color: #1c1c1c;
    padding: 0.25rem 0.5rem;
    border: 2px solid #1c1c1c;
  }
}

.site-search {
  .search-box {
    opacity: 0;
    width: 16rem;
    visibility: hidden;
    transform: translateX(-50%);
    backface-visibility: hidden;
    top: 3rem;
    left: 50%;
    &.showing {
      opacity: 1;
      visibility: visible;
    }
  }
  input[type='submit'] {
    border: none;
    outline: 0;
    background-color: transparent;
    height: 100%;
    cursor: pointer;
    padding: 0 0.75rem;
  }
  input[type='text'] {
    outline: 0;
    padding: 0.65rem;
    background-color: #fff;
    border: 1px solid #ccc;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.12);
    border-radius: 4px;
    font: inherit;
    font-size: 0.75rem;
    color: #666;
    &::-webkit-input-placeholder {
      color: #aaa;
    }
    &::-moz-placeholder {
      color: #aaa;
    }
    &:-ms-input-placeholder {
      color: #aaa;
    }
    &:-moz-placeholder {
      color: #aaa;
    }
    &:focus {
      border: 1px solid #222;
    }
  }
}

.customizer {
  @media screen and (min-width: $break-md) {
    display: flex;
  }

  .customizer__left {
    @media screen and (min-width: $break-md) {
      width: 60%;
    }
  }
  .customizer__right {
    @media screen and (min-width: $break-md) {
      width: 40%;
    }
  }
}

.customizer__button {
  margin-top: 0.5rem;
  justify-content: center;
  @media screen and (min-width: $break-md) {
    margin-top: 1.5rem;
    justify-content: left;
  }
}

.mobile-customizer {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
}

select,
select:focus {
  font-size: 16px;
}

.homepage-categories {
  margin-top: 3rem;
  @media screen and (min-width: $break-md) {
    margin-top: 3rem;
  }

  .homepage-categories__content {
    p {
      line-height: 1.6;
      margin: 0.25rem 0 0.1rem;
    }
    @media screen and (min-width: $break-md) {
      border-bottom: 1px solid #e6e6e6;
      padding-bottom: 3rem;
    }
  }
  .image-wrapper {
    width: calc(50% - 0.5rem);
    &:nth-child(odd) {
      margin-right: 1rem;
    }

    @media screen and (min-width: $break-md) {
      width: calc(25% - 0.75rem);
      &:not(:last-child) {
        margin-right: 1rem;
      }
    }
  }
}

.value-props {
  margin-top: 3rem;
  padding: 1.5rem 0;

  .fine-metals {
    width: 68px;
  }
  .fine-crystals {
    width: 32px;
  }
  .hypoallergenic {
    width: 58px;
  }
  .woman-owned {
    width: 64px;
  }

  @media screen and (min-width: $break-md) {
    margin-top: 5rem;
    padding: 5rem 0;
    .fine-metals {
      width: 104px;
    }
    .fine-crystals {
      width: 50px;
    }
    .hypoallergenic {
      width: 86px;
    }
    .woman-owned {
      width: 96px;
    }
  }

  .value-prop {
    width: 50%;
    padding: 0 0.5rem;
    box-sizing: border-box;
    margin: 1rem 0;

    @media screen and (min-width: $break-md) {
      width: 25%;
      margin-bottom: 0;
    }
  }
  svg {
    display: inline-block;
  }
}

.pad-subheader {
  padding: 0.25rem 0 1.25rem;
}

.home-hero-gradient {
  background: -moz-linear-gradient(
    top,
    rgba(0, 0, 0, 0) 0%,
    rgba(255, 244, 243, 0.65) 100%
  );
  background: -webkit-linear-gradient(
    top,
    rgba(0, 0, 0, 0) 0%,
    rgba(255, 244, 243, 0.65) 100%
  );
  background: linear-gradient(
    to bottom,
    rgba(0, 0, 0, 0) 0%,
    rgba(255, 244, 243, 0.65) 100%
  );
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00000000', endColorstr='#a6fff4f3',GradientType=0 );
}

.pdp-description {
  font-size: 0.75rem;
