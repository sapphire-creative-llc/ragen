  .p#{$value} {
    padding: #{$value}rem;
  }
  .pt#{$value} {
    padding-top: #{$value}rem;
  }
  .pr#{$value} {
    padding-right: #{$value}rem;
  }
  .pb#{$value} {
    padding-bottom: #{$value}rem;
  }
  .pl#{$value} {
    padding-left: #{$value}rem;
  }
  .px#{$value} {
    padding-left: #{$value}rem;
    padding-right: #{$value}rem;
  }
  .py#{$value} {
    padding-top: #{$value}rem;
    padding-bottom: #{$value}rem;
  }

  .m#{$value} {
    margin: #{$value}rem;
  }
  .mt#{$value} {
    margin-top: #{$value}rem;
  }
  .mr#{$value} {
    margin-right: #{$value}rem;
  }
  .mb#{$value} {
    margin-bottom: #{$value}rem;
  }
  .ml#{$value} {
    margin-left: #{$value}rem;
  }
  .mx#{$value} {
    margin-left: #{$value}rem;
    margin-right: #{$value}rem;
  }
  .mx-#{$value} {
    margin-left: -#{$value}rem;
    margin-right: -#{$value}rem;
  }
  .my#{$value} {
    margin-top: #{$value}rem;
    margin-bottom: #{$value}rem;
  }

  .width-#{$value} {
    width: #{$value}rem;
  }
  .height-#{$value} {
    height: #{$value}rem;
  }
  .t#{$value} {
    top: #{$value}rem;
  }
  .l#{$value} {
    left: #{$value}rem;
  }
  .b#{$value} {
    bottom: #{$value}rem;
  }
  .r#{$value} {
    right: #{$value}rem;
  }

  .h#{$value}0p {
    height: #{$value}0%;
  }
  .h#{$value}0vh {
    height: #{$value}0vh;
  }
  .w#{$value}0p {
    width: #{$value}0%;
  }

  .z#{$value} {
    z-index: #{$value};
  }
}

