  &:hover {
    border-bottom-color: #222;
  }
}

.home-links {
  flex-direction: column;
  align-items: center;
  justify-content: center;
  a {
    display: inline-block;
    margin: 0 0 1rem;
    padding: 0 .5rem;
  }
  @media screen and (min-width: $break-md) {
    flex-direction: row;
    justify-content: flex-start;
    a {
      margin: 0 2rem 0 0;
      padding: 0;
    }
  }
}

.home-hero {
  height: calc(100vh - 7rem);
  &.banner-showing {
    height: calc(100vh - 9rem);
  }
  @media screen and (min-width: $break-md) {
    height: calc(100vh - 8rem);
    &.banner-showing {
      height: calc(100vh - 10rem);
    }
  }
}

.main-height {
  min-height: auto;
  @media screen and (min-width: $break-md) {
    min-height: calc(100vh - 23rem);
    &.banner-showing {
      min-height: calc(100vh - 25rem);
    }
  }
}

.collection-item {
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
  width: 50%;
  .plus-sign {
    margin-bottom: 5px;
  }
}
.collection-item:nth-child(2n + 2) {
  border-right: 0;
}
@media screen and (min-width: 768px) {
  .collection-item {
    width: 33.3%;
  }
  .collection-item:nth-child(2n + 2) {
    border-right: 1px solid #eee;
  }
  .collection-item:nth-child(3n + 3) {
    border-right: 0;
  }
}
@media screen and (min-width: 1048px) {
  .collection-item {
    width: 25%;
  }
  .collection-item:nth-child(2n + 2) {
    border-right: 1px solid #eee;
  }
  .collection-item:nth-child(3n + 3) {
    border-right: 1px solid #eee;
  }
  .collection-item:nth-child(4n + 4) {
    border-right: 0;
  }
}

.footer-signup {
  label {
    margin-bottom: .5rem;
  }
}

.popup-signup {
  input[type="submit"] {
    border: none;
    outline: 0;
    background-color: transparent;
    height: 100%;
    cursor: pointer;
  }
  label {
    margin-bottom: .5rem;
  }
}

.popup {
  background: rgba(200,200,200,.8);
  visibility: visible;
  opacity: 1;
  transition: all .2s;
  &.hidden {
    visibility: hidden;
    opacity: 0;
  }
  .popup-vert-center {
    @media screen and (min-width: $break-md) {
      display: flex;
      align-items: center;
      width: 100%;
      height: 100%;
    }
  }
  .popup-box {
    max-width: 48rem;
    flex-direction: column;
    @media screen and (min-width: $break-md) {
      margin-left: auto;
      margin-right: auto;
      flex-direction: row;
    }
    .popup-image {
      height: 10rem;
      @media screen and (min-width: $break-md) {
        height: auto;
        width: 40%;
      }
    }
    .popup-content {
      padding: 2rem;
      @media screen and (min-width: $break-md) {
        padding: 3rem;
        width: 60%;
      }
    }
    .ig-image {
      width: 100%;
      border-radius: 4px;
      @media screen and (min-width: $break-md) {
        border-radius: 4px 0 0 4px;
        width: 50%;
      }
    }
    .ig-content {
      padding: 1rem;
      position: relative;
      @media screen and (min-width: $break-md) {
        position: absolute;
        padding: 2rem;
        width: 50%;
      }
    }
    .ig-comments {
      li {
        margin-bottom: .25rem;
      }
    }
  }
}

.popup.sizing-chart-popup {
  .popup-box {
    max-width: 32rem;
  }
}

.cart-count {
  width: .9rem;
  height: .9rem;
  line-height: 1.4;
  right: .2rem;
  top: -.5rem;
}

.arrow-down {
  width: 0;
  height: 0;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top-width: 4px;
  border-top-style: solid;
  border-top-color: currentColor;
  margin-left: .5rem;
}
.arrow-down-white {
  border-top: 4px solid #ffffff;
}

.site-wrapper {
  height: calc(100% - 4rem);
  &.banner-showing {
    height: calc(100% - 6rem);
  }
}

.site-nav {
  height: 2.5rem;
  .site-nav-link {
    letter-spacing: .5px;
    line-height: 1.4;
    padding: 0 .75rem;
    height: 100%;
    display: flex;
    align-items: center;
    &.shop:hover ~ .shop-nav {
      opacity: 1;
      visibility: visible;
      transition: all .3s;
    }
    &.build-your-stack {
      &:after {
        content: 'new';
        text-transform: uppercase;
        background-color: #fabeb4;
        padding: .065rem .2rem;
        border-radius: 500px;
        color: #1c1c1c;
        position: relative;
        top: -6px;
        left: -2px;
        font-size: .55rem;
        font-weight: bold;
      }
    }
  }
  @media screen and (min-width: $break-lg) {
    height: 3.5rem;
  }
}
.shop-nav {
  opacity: 0;
  visibility: hidden;
  transition: all .3s;
  li {
    margin-bottom: .35rem;
  }
  @media screen and (min-width: $break-lg) {
    top: 3.5rem;
  }
  &:hover {
    opacity: 1;
    visibility: visible;
    transition: all .3s;
  }
}

.cart-wrapper {
  width: 100%;
  transform: translateX(100%);
  -webkit-transition: transform .2s;
  transition: transform .2s;
  @media screen and (min-width: $break-lg) {
    width: 33%;
  }
}

.site {
  transform: translateX(0);
  -webkit-transition: transform .2s;
  transition: transform .2s;
}

.cart-open {
  .site {
    transform: translateX(-100%);
    @media screen and (min-width: $break-lg) {
      transform: translateX(-33%);
