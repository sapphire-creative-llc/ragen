<a href="{{ product.url }}" class="no-underline black w25p hover-image-wrapper px3 pb3 border-box">
  {% for image in product.images %}
    {% if forloop.first == true %}
      <div class="overflow-hidden bg-light-gray">
        <div class="image bg-center bg-cover fade-image" style="padding-top: 100%;" data-img="{{ image | img_url: '750x' }}"></div>
      </div>
    {% endif %}
  {% endfor %}
  <div class="text-center">
    <p class="mt1 mb0 h5 dark-gray">{{ product.title }}</p>
    {% if product.first_available_variant.available %}
      <p class="tag inline-block h6 dark-pink bg-light-pink">{{ product.price | money_without_trailing_zeros }}</p>
    {% else %}
      <p class="light-gray">Sold Out</p>
    {% endif %}
  </div>
</a>
