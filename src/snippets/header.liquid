{% include 'announcement' %}
<header class="js-header site-nav sticky t0 mx1 l1 r1 show-lg z9 h5 text-uppercase apercu-light bg-black rounded-bottom">
  <div class="flex items-center h100p px1">
    <nav class="flex items-center w100p">
      <div class="flex-1 basis-0">
        {% for main in linklists.main-menu.links %}
          <a class="white no-underline p1 hover-opacity-5" href="{{ main.url }}">{{ main.title }}</a>
        {% endfor %}
      </div>
      <h1 class="m0 h0">
        <a class="no-underline pink" href="/">
          {% assign logo_width = 160 %}
          {% include 'logo' %}
        </a>
      </h1>
      <div class="flex items-center justify-end flex-1 basis-0 text-right">
        {% if shop.customer_accounts_enabled %}
          {% if customer %}
            <a class="no-underline white p1 hover-opacity-5" href="/account">Account</a>
          {% else %}
            {% if shop.customer_accounts_optional %}
              {{ 'Sign Up' | customer_register_link | replace: '<a', '<a class="no-underline white p1 hover-opacity-5"' }}
            {% endif %}
            {{ 'Account' | customer_login_link | replace: '<a', '<a class="no-underline white p1 hover-opacity-5"' }}
          {% endif %}
        {% endif %}
        <a class="no-underline white p1 hover-opacity-5" href="/help">Help</a>
        <a class="js-cart-trigger no-underline white p1 hover-opacity-5" href="#">
          <div class="flex items-center">
            {% assign cart_icon_width = 22 %}
            {% include 'cart-icon' %}
            {% include 'cart-count' %}
          </div>
        </a>
      </div>
    </nav>
  </div>
</header>
{% if template.name != 'index' %}
  {% include 'secondary-menu' %}
{% endif %}

