{% style %}

.logo {
  margin-top: -7px;
  margin-right: 4rem;
}

.icon-text {
  padding-left: 0.35rem;
}

{% endstyle %}

{% include 'announcement' %}
<header class="js-header site-nav sticky t0 l0 r0 show-lg z9 h6 bg-black text-uppercase relative">
  <div class="flex items-center h100p px2">
    <nav class="flex items-center w100p h100p">
      <h1 class="logo m0 h0">
        <a class="site-nav-link no-underline ragen-pink" href="/">
          {% assign logo_width = 123 %}
          {% include 'logo' %}
        </a>
      </h1>
      <div class="flex items-center flex-1 basis-0 h100p">
        {% for main in linklists.main-menu.links %}
          <a class="site-nav-link white no-underline hover-ragen-pink {{ main.title | handleize }}" href="{{ main.url }}">
            {{ main.title }}
          </a>
        {% endfor %}
        <div class="shop-nav absolute bg-white t4 l0 w100p py2 text-capitalize border-bottom border-smoke">
          <div class="grid">
            <div class="flex justify-between">
              {% for secondary in linklists.secondary-menu.links %}
                <ul class="list-reset">
                  <li>
                    <a href="{{ secondary.url }}" class="hover-ragen-pink no-underline black h6 bold">
                      {{ secondary.title }}
                    </a>
                  </li>
                  {% for child_link in secondary.links %}
                    <li>
                      <a href="{{ child_link.url }}" class="hover-ragen-pink no-underline black h6">
                        {{ child_link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
      <div class="flex items-center justify-end flex-1 basis-0 text-right">
        <div class="site-nav__search width-15 mr1">
          <form action="/search" autocomplete="off" class="search">
            <input name="type" type="hidden" value="product"/>
            <div class="relative">
              <input type="text" placeholder="Search" required name="q" value="{{ search.terms | escape }}" class="required email w100p border-box"/>
              <div class="absolute flex items-center t0 r0 b0 r0">
                <button class="white" type="submit">
                  {% assign search_width = 18 %}
                  {% include 'icon-search' %}
                </button>
              </div>
            </div>
          </form>
        </div>
        {% if shop.customer_accounts_enabled %}
          <a class="site-nav-link white no-underline p1 hover-ragen-pink flex items-center" href="/account/login">
            <svg viewbox="0 0 20 20" width="18">
              <g fill="none">
                <path d="M0 0h20v20H0z"/>
                <path d="M10 9a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM1 19h18v-.667a6.5 6.5 0 0 0-6.5-6.5h-5a6.5 6.5 0 0 0-6.5 6.5V19z" stroke-width="1.4" stroke="currentColor"/>
              </g>
            </svg>
            <span class="icon-text">Login&nbsp;&nbsp;|&nbsp;&nbsp;Register</span>
          </a>
        {% endif %}
        <a class="js-cart-trigger site-nav-link no-underline white hover-ragen-pink relative" href="#">
          <svg viewbox="0 0 20 20" width="18">
            <path d="M15 8.333H5v-2.5a5 5 0 1 1 10 0v2.5zm-14.167 0v10.834h18.334V8.333H15v-2.5a5 5 0 0 0-10 0v2.5H.833z" fill="none" stroke-width="1.4" stroke="currentColor"/>
          </svg>
          <span class="js-header-count cart-count circle text-center bg-ragen-pink black h6 block absolute">
            {{ cart.items.length }}
          </span>
        </a>
      </div>
    </nav>
  </div>
</header>

<header class="js-header z9 t0 bg-black hide-lg site-nav sticky h5 text-uppercase apercu-light">
  <div class="flex items-center h100p px1">
    <div class="flex-1 w30p flex items-center">
      <svg class="js-mobile-nav-open inline-block pointer h0" viewbox="0 0 33 23" width="21">
        <g fill="white">
          <rect height="2.6" width="33" y="10.2"/>
          <rect height="2.6" width="33"/>
          <rect height="2.6" width="33" y="20.4"/>
        </g>
      </svg>
      <a class="mobile-search px1 white no-underline hover-opacity-5 flex items-center h6" href="/search">
        {% assign search_width = 18 %}
        {% include 'icon-search' %}
      </a>
    </div>
    <div class="flex-1 w40p text-center">
      <h1 class="m0 h0" style="margin-top: -4px">
        <a class="no-underline ragen-pink" href="/">
          {% assign logo_width = 100 %}
          {% include 'logo' %}
        </a>
      </h1>
    </div>
    <div class="flex-1 w30p flex justify-end">
      <a class="js-cart-trigger site-nav-link no-underline white relative" href="#">
        <svg viewbox="0 0 20 20" width="18">
          <path d="M15 8.333H5v-2.5a5 5 0 1 1 10 0v2.5zm-14.167 0v10.834h18.334V8.333H15v-2.5a5 5 0 0 0-10 0v2.5H.833z" fill="none" stroke-width="1.4" stroke="currentColor"/>
        </svg>
        <span class="js-header-count cart-count circle text-center bg-ragen-pink black h6 block absolute">
          {{ cart.items.length }}
        </span>
      </a>
    </div>
  </div>
</header>
