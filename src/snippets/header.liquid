      <svg class="js-mobile-nav-open inline-block pointer" xmlns="http://www.w3.org/2000/svg" width="21" viewBox="0 0 33 23">
        <g fill="white">
          <rect y="10.2" width="33" height="2.6"/>
          <rect width="33" height="2.6"/>
          <rect y="20.4" width="33" height="2.6"/>
        </g>
      </svg>
    </div>
    <div class="flex-1 w60p text-center">
      <h1 class="m0 h0">
        <a class="no-underline pink" href="/">
          {% assign logo_width = 120 %}
          {% include 'logo' %}
        </a>
      </h1>
    </div>
    <div class="flex-1 w20p flex justify-end">
      <a class="js-cart-trigger no-underline white" href="#">
        <div class="flex items-center">
          {% assign cart_icon_width = 18 %}
