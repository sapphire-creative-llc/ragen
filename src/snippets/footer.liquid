<footer class="site-footer hide show-md px1">
  <div class="pt2 bg-light-pink black rounded-top px2">
    <div class="flex">
      <div class="overflow-hidden w90p left mb1">
        <nav class="w30p left py1">
          <p class="m0 pb1">Ragen</p>
          {% for ragen in linklists.ragen-menu.links %}
            <a class="h5 inline-block no-underline dark-pink hover-opacity-5" href="{{ ragen.url }}">
              {{ ragen.title }}
            </a><br />
          {% endfor %}
        </nav>
        <nav class="w30p left py1">
          <p class="m0 pb1">Help</p>
          {% for help in linklists.help-menu.links %}
            <a class="h5 inline-block no-underline dark-pink hover-opacity-5" href="{{ help.url }}">
              {{ help.title }}
            </a><br />
          {% endfor %}
        </nav>
        <nav class="w30p left py1">
          <p class="m0 pb1">Account</p>
          {% for account in linklists.account-menu.links %}
            <a class="h5 inline-block no-underline dark-pink hover-opacity-5" href="{{ account.url }}">
              {{ account.title }}
            </a><br />
          {% endfor %}
        </nav>
      </div>
      <div class="overflow-hidden w50p left pt1">
        <div class="mb1">
          <a class="inline-block dark-pink mr1 hover-opacity-5" href="https://www.instagram.com/ragenjewels/?hl=en" target="_blank">
            {% include 'instagram-icon' %}
          </a>
          <a class="inline-block dark-pink mr1 hover-opacity-5" href="https://www.facebook.com/ragenjewels/" target="_blank">
            {% include 'facebook-icon' %}
          </a>
          <a class="inline-block dark-pink mr1 hover-opacity-5" href="https://www.pinterest.com/ragenjewels/" target="_blank">
            {% include 'pinterest-icon' %}
          </a>
          <a class="inline-block dark-pink hover-opacity-5" href="https://twitter.com/ragenjewels" target="_blank">
            {% include 'twitter-icon' %}
          </a>
        </div>
        <label class="block medium-gray h5" for="mce-EMAIL">
          Be an insider! Sign up for the Ragen newsletter:
        </label>
        {% include 'footer-signup' %}
      </div>
    </div>
    <p class="medium-gray h6 pb2 mb0">
      © 2018 Ragen Jewels. All rights reserved.
    </p>
  </div>
</footer>
