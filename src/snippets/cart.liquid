<div class="cart-wrapper fixed h100p t0 r0 bg-black white z10 scroll-y">
  <div class="flex flex-column h100p">
    <div class="pad-cart-close text-right">
      <svg class="js-cart-trigger pointer inline-block v-middle charcoal hover-gray" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
        <polygon points="7.5 8.5 1 14.9 0 13.9 6.5 7.5 0 1 1 0 7.5 6.5 14 0 15 1 8.5 7.5 15 14 14 15" fill="currentColor"/>
      </svg>
    </div>
    <div class="cart-padding flex-1">
      <p class="js-sidebar-count white bembo mb2">0 Items in Cart</p>
      <p class="js-cart-error hide mt0 mb2 red border border-red p1 h5"></p>
      <div class="cart-items"></div>
      <div class="js-shipping flex items-center justify-between mt3 pt1 border-top border-charcoal">
        <span class="js-shipping-name"></span>
        <span class="js-shipping-cost bembo">{{ shipping_method.handle }}</span>
      </div>
      <div class="js-subtotal flex items-center justify-between mt1 pt1 border-top border-charcoal">
        <span>Subtotal</span>
        <span class="js-subtotal-cost bembo"></span>
      </div>
    </div>
    <div class="cart-padding py2">
      <a href="/checkout" class="js-view-cart flex justify-center bg-white hover-opacity-7 py1 px2 bembo black no-underline">
        Checkout
      </a>
      <a href="/collections/the-collection" class="js-shop-collection flex justify-center border border-charcoal py1 px2 bembo white no-underline hover-border-gray">
        Shop the Collection
      </a>
    </div>
  </div>
</div>
