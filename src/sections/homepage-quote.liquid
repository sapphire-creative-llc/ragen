<div class="bg-light-pink rounded py3 text-center">
  <div class="grid">
    <div class="quote-width mx-auto">
      <p class="black mt0 mb2">
        <span class="black">“</span>
        {{ section.settings.quote_text }}
        <span class="black">”</span>
      </p>
      <div class="flex justify-center">
        <div class="flex items-center">
          <img class="circle retina" src="https://bit.ly/2E9gKCf" />
          <div class="pink ml1 text-left">
            <h3 class="text-normal apercu-light m0">Negar N.</h3>
            <span class="text-uppercase h6">Founder</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Quote",
    "settings": [
      {
        "id": "quote_text",
        "type": "text",
        "label": "Quote text"
      }
    ]
  }
{% endschema %}
